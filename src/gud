#!/bin/bash

source "usr/local/bin/venv/bin/activate"
python "usr/local/bin/gud/src/main.py" "$@"

####

# activate the venv so it uses all relevant pip installs
source "usr/local/bin/venv/bin/activate"

# file path to the entry script
SCRIPT_DIR=$(dirname "$0")
DIR_PATH=$(realpath "$SCRIPT_DIR")
PYTHON_FILE_PATH="$DIR_PATH/main.py"

# run the main script
python "$PYTHON_FILE_PATH" "$@"